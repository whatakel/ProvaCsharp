@* View de exclusão de tarefa *@
@using TodoList.Models
@model TodoTask

@{
    ViewData["Title"] = "Excluir Tarefa";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(120deg, #f8fafc 0%, #e0e7ef 100%);
            font-family: 'Segoe UI', Arial, sans-serif;
            color: #3a3a3a;
        }
        .container {
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px 0 rgba(180, 180, 200, 0.13);
            padding: 36px 32px 32px 32px;
            margin-top: 48px;
            max-width: 500px;
        }
        h1 {
            color: #7b8fa1;
            font-weight: 700;
            margin-bottom: 32px;
            letter-spacing: 1px;
        }
        .btn-danger, .btn-secondary {
            border: none;
            border-radius: 8px;
            font-weight: 500;
            transition: background 0.2s;
        }
        .btn-danger {
            background: #f7b6b6;
            color: #a12d2d;
        }
        .btn-danger:hover {
            background: #f28b8b;
        }
        .btn-secondary {
            background: #d1d8e0;
            color: #4a5568;
        }
        .alert-warning {
            background: #fff7e6;
            color: #a67c00;
            border-radius: 8px;
            border: 1px solid #ffe5b4;
        }
        @@media (max-width: 600px) {
            .container { padding: 12px; }
            h1 { font-size: 1.5rem; }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <!-- Exibe datas de criação e conclusão -->
        <div class="mb-3">
            <label class="form-label">Criado em:</label>
            <span>@Model.CriadoEm.ToString("dd/MM/yyyy HH:mm")</span>
        </div>
        <div class="mb-3">
            <label class="form-label">Concluído em:</label>
            <span>@(Model.ConcluidoEm.HasValue ? Model.ConcluidoEm.Value.ToString("dd/MM/yyyy HH:mm") : "-")</span>
        </div>
        <!-- Mensagem de confirmação de exclusão -->
        <div class="alert alert-warning">Tem certeza que deseja excluir a tarefa <strong>@Model.Titulo</strong>?</div>
        <!-- Formulário para confirmar exclusão -->
        <form asp-action="Delete" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</body>
</html>
