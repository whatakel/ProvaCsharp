@* View de listagem de tarefas *@
@using TodoList.Models
@model IEnumerable<TodoTask>

@{
    ViewData["Title"] = "ToDo List";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(120deg, #f8fafc 0%, #e0e7ef 100%);
            font-family: 'Segoe UI', Arial, sans-serif;
            color: #3a3a3a;
        }
        .container {
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px 0 rgba(180, 180, 200, 0.13);
            padding: 36px 32px 32px 32px;
            margin-top: 48px;
            max-width: 900px;
        }
        h1 {
            color: #7b8fa1;
            font-weight: 700;
            margin-bottom: 32px;
            letter-spacing: 1px;
        }
        .btn-success, .btn-primary, .btn-warning, .btn-danger, .btn-secondary {
            border: none;
            border-radius: 8px;
            font-weight: 500;
            transition: background 0.2s;
        }
        .btn-success {
            background: #b6e2d3;
            color: #2d5c4d;
        }
        .btn-success:hover {
            background: #a0d9c2;
        }
        .btn-warning {
            background: #ffe5b4;
            color: #a67c00;
        }
        .btn-warning:hover {
            background: #ffdb99;
        }
        .btn-danger {
            background: #f7b6b6;
            color: #a12d2d;
        }
        .btn-danger:hover {
            background: #f28b8b;
        }
        .btn-secondary {
            background: #d1d8e0;
            color: #4a5568;
        }
        .table {
            background: #f9fafb;
            border-radius: 12px;
            overflow: hidden;
            margin-top: 18px;
        }
        th {
            background: #e3eafc;
            color: #5a6d8a;
            font-weight: 600;
        }
        td, th {
            vertical-align: middle;
        }
        .status-pendente {
            color: #f7b267;
            font-weight: 600;
        }
        .status-concluido {
            color: #7ed6a7;
            font-weight: 600;
        }
        .actions {
            display: flex;
            gap: 8px;
        }
        @@media (max-width: 600px) {
            .container { padding: 12px; }
            h1 { font-size: 1.5rem; }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <div>
            <div style="display:flex; flex-direction:column font-size: 1rem; justify-content:space-between; align-items: center; width:100%; padding:1rem; border: 1px solid #c3c3c3; border-radius:5px ; ; margin-bottom: 1rem ">
            <h3>Tempo total para finalizar todas as tarefas: </h3>
            <p>
            @(Model.Count() * 30)
            Minutos para finalizar</p>
            </div>
        </div>
        <!-- Botão para criar nova tarefa -->
        <a href="@Url.Action("Create")" class="btn btn-success mb-3">Criar Tarefa</a>
        <!-- Tabela de tarefas -->
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Usuário</th>
                    <th>Status</th>
                    <th>Criado em</th>
                    <th>Concluído em</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @* Percorre cada tarefa e exibe na tabela *@
                @foreach (var tarefa in Model)
                {
                    <tr>
                        <td>@tarefa.Id</td>
                        <td>@tarefa.Titulo</td>
                        <td>@tarefa.Usuario</td>
                        <td>
                            <span class="@(tarefa.Status ? "status-concluido" : "status-pendente")">
                                @(tarefa.Status ? "Concluído" : "Pendente")
                            </span>
                        </td>
                        <td>@tarefa.CriadoEm.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(tarefa.ConcluidoEm.HasValue ? tarefa.ConcluidoEm.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                        <td class="actions">
                            <!-- Botão para editar -->
                            <a href="@Url.Action("Edit", new { id = tarefa.Id })" class="btn btn-warning btn-sm">Editar</a>
                            <!-- Botão para excluir -->
                            <a href="@Url.Action("Delete", new { id = tarefa.Id })" class="btn btn-danger btn-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
